{
  "name": "duck-api",
  "author": "Martin Rafael Gonzalez <tin@devtin.io>",
  "version": "0.0.3",
  "main": "dist/duck-api.js",
  "module": "dist/duck-api.mjs",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:lib && npm run build:docs",
    "build:lib": "rollup -c",
    "build:docs": "npx jsdoc2md --plugin dmd-readme -d 3 --template node_modules/dmd-readme/docs.hbs --files dist/duck-api.js > README.md",
    "build:live": "nodemon -w src --exec yarn build",
    "lint": "eslint --ext .js --ignore-path .gitignore src/",
    "test": "NODE_ENV=test ava --serial --verbose",
    "test:unit": "npm run test -- src/**/*.unit.js",
    "test:all": "NODE_ENV=test ava --serial --verbose"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "ava": "^3.12.1",
    "axios": "^0.20.0",
    "babel-eslint": "^10.1.0",
    "dmd-readme": "^1.0.1-beta",
    "eslint": "^7.7.0",
    "jsdoc-to-markdown": "^6.0.1",
    "koa": "^2.13.0",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "rollup": "^2.26.7",
    "rollup-plugin-babel-minify": "^10.0.0",
    "sinon": "^9.0.3",
    "socket.io-client": "^2.3.0",
    "standard-version": "^9.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "src/**/*.unit.js"
    ],
    "require": [
      "esm"
    ],
    "babel": true
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "BigInt": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "git add -f coverage"
    }
  },
  "dependencies": {
    "@devtin/schema-validator-doc": "^1.0.5",
    "@pleasure-js/utils": "pleasure-js/utils",
    "bluebird": "^3.7.2",
    "clean-deep": "^3.4.0",
    "deepmerge": "^4.2.2",
    "duck-storage": "0.0.13",
    "esm": "^3.2.25",
    "js-dir-into-json": "^2.4.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "koa-body": "^4.2.0",
    "koa-jwt": "^4.0.0",
    "koa-no-trailing-slash": "^2.1.0",
    "koa-router": "^9.4.0",
    "lodash": "^4.17.20",
    "query-string": "^6.13.1",
    "socket.io": "^2.3.0"
  },
  "config": {
    "readme": {
      "features": {
        "base": "src/",
        "match": [
          "**/*.unit.js"
        ]
      }
    }
  }
}
